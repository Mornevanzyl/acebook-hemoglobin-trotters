<div id ="mycard">

  <div class="demo-card-wide mdl-card mdl-shadow--2dp">
    <div class="mdl-card__title mdl-color--primary">
      <h2 class="mdl-card__title-text">Sign In</h2>
    </div>

    <div class="mdl-card__supporting-text">
      Please fill in your details! We'll never share them with anyone except GitHub!

      <%= form_with model: @user, url: sign_in_path, local: true, method: :post do |form| %>

      <div id="email">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= form.text_field :email, class: "mdl-textfield__input", id: "email-input" %>
          <label class="mdl-textfield__label" for="sample2">E-mail</label>
        </div>
      </div>

      <div id="password">
        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
          <%= form.password_field :password, class: "mdl-textfield__input", id: "password-input" %>
          <label class="mdl-textfield__label" for="sample3">Password</label>
        </div>
      </div>

    </div>
  </div>

  <div id="next" style="padding-left: 10px" >
    <%= button_tag( :class => "mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-color--accent" ) do %>
      <i class="material-icons">arrow_forward</i>
    <% end %>
  </div>

      <% end %>
</div>
