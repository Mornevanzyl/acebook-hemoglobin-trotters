<% if Current.user %>
  <div id ="mycard">

    <div class="demo-card-wide mdl-card mdl-shadow--2dp">
      <div class="mdl-card__title mdl-color--primary">
        <h2 class="mdl-card__title-text">New Post</h2>
      </div>

      <div class="mdl-card__supporting-text">
        <%= form_for @post do |form| %>
          <div class="form-area">
            <div class="mdl-textfield mdl-js-textfield extrawide">
              <%= form.text_area :message, rows: 4, class: "mdl-textfield__input"%>
              <label class="mdl-textfield__label" for="sample2">What's on your mind?</label>
            </div>

            <div class="button-wrapper">
              <%= button_tag( :class => "mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-color--accent" ) do %>
              <i class="material-icons">arrow_forward</i>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
