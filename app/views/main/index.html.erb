<h1>Timeline</h1>

<% if @user %>
  Welcome, <%= @user.first_name %>!
  <%= button_to "Logout", logout_path, method: :delete %>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>

<div class="feed">
  <% @posts.each do |post| %>
    <div class="post-container container">
      <div class="post-owner"></div>
      <div class="post-content"><%= post.message %></div>
      <div class="post-when">Posted at <%= post.created_at.strftime("%H:%M %d/%m/%y") %></div>
    </div>
  <% end %>
</div>
